<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:gravity="center">

    <ImageView
        android:id="@+id/page_status_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/page_status_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/page_status_icon_iv"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_margin="12dip"
        android:gravity="center_horizontal"
        android:text="所有需求"
        android:textColor="@color/gray7"
        android:textSize="14dip" />

    <android.support.v7.widget.CardView
        android:id="@+id/refresh_again_btn"
        style="@style/Commom.CardView"
        android:layout_width="wrap_content"
        android:layout_height="39dip"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/page_status_text_tv"
        android:layout_marginLeft="5dip"
        android:background="@color/theme_color"
        app:cardBackgroundColor="@color/theme_color"
        app:cardCornerRadius="5dip">

        <TextView
            android:id="@+id/refresh_again_tv"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:singleLine="true"
            android:text="刷新"
            android:textColor="@android:color/white"
            android:textSize="14dip" />

    </android.support.v7.widget.CardView>

</RelativeLayout>