<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="个人中心"/>

        <com.voisd.sun.view.MyImageView
            android:id="@+id/user_header_img"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_user"/>

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text=""/>

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/mLinearLayout"
        android:id="@+id/user_collect_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:text="我的收藏"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:src="@drawable/ic_arrow_right"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/user_collect_rel"
        android:id="@+id/user_reply_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:text="我的评论"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:src="@drawable/ic_arrow_right"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/user_reply_rel"
        android:id="@+id/user_pass_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:text="密码修改"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:src="@drawable/ic_arrow_right"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/user_pass_rel"
        android:id="@+id/user_info_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:text="个人资料"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:src="@drawable/ic_arrow_right"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/user_info_rel"
        android:id="@+id/user_system_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:text="关于我们"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:src="@drawable/ic_arrow_right"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/user_bottom_cardView"
        style="@style/Commom.CardView"
        android:layout_width="210dp"
        android:layout_centerHorizontal="true"
        android:layout_height="48dp"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/theme_color"
        app:cardCornerRadius="3dip">

        <TextView
            android:id="@+id/user_bottom_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="登录"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>