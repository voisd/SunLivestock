<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_root_rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_content_rel"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray1">

        <android.support.v7.widget.CardView
            android:id="@+id/layout_reply_cardview"
            style="@style/Commom.CardView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="12dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="3dip">

            <EditText
                android:id="@+id/layout_reply_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:padding="6dp"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:maxLength="100"
                android:background="@null"/>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_below="@+id/layout_reply_cardview"
            android:layout_alignParentRight="true"
            android:id="@+id/layout_submit_cardview"
            style="@style/Commom.CardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/theme_color"
            app:cardCornerRadius="3dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="提交"/>

        </android.support.v7.widget.CardView>


    </RelativeLayout>


</RelativeLayout>