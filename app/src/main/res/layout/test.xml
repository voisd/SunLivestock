<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:background="#78a0a0"
            android:text="match_parent_30dip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:background="#71aa00"
            android:text="wrap_content_30dip"/>

        <TextView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:background="#7eee00"
            android:text="30dip_30dip"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3cff90"
            android:text="match_parent_match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#aa99cf"
            android:text="wrap_content_wrap_content"/>

    </LinearLayout>

</LinearLayout>